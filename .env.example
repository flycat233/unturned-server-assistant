# NoneBot2 机器人配置文件示例
# 复制此文件并重命名为.env后修改配置
# 所有配置项都可以在settings.py中统一管理

# ===== 基础配置 =====

# 超级用户ID，使用JSON数组格式
# 示例：SUPERUSERS=["1049217020","1234567890"]
SUPERUSERS=["1049217020"]

# OneBot 适配器配置
# 是否开启调试模式
DEBUG=false
# 机器人昵称（JSON数组格式）
NICKNAME=["Unturned助手"]
# 命令前缀，多个前缀用逗号分隔
COMMAND_START=["/", "!", "！"]
# 命令分隔符
COMMAND_SEP=["|"]

# ===== 服务配置 =====

# API服务配置
API_ENABLED=true
API_HOST=127.0.0.1
API_PORT=8080
API_DEBUG=false

# 数据库配置 - 默认使用MySQL
# 格式：mysql+pymysql://用户名:密码@主机:端口/数据库名
# 生产环境请使用真实的数据库连接信息
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/unturned_bot

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=unturned_bot.log

# ===== 监控配置 =====

# 服务器监控配置
MONITOR_INTERVAL=60  # 监控间隔(秒)
NOTIFY_ON_STARTUP=true  # 启动通知
NOTIFY_ON_SHUTDOWN=true  # 关闭通知

# Unturned服务器连接配置
SERVER_IP=127.0.0.1
SERVER_PORT=27015
SERVER_QUERY_PORT=27016

# ===== 其他配置 =====

# 重试配置
MAX_RETRY_TIMES=3
RETRY_INTERVAL=5
# Unturned服务器助手机器人环境变量配置示例
# 请将此文件复制并重命名为.env后使用

# 超级用户列表，用逗号分隔QQ号
SUPERUSERS=123456789,987654321

# API配置
API_ENABLED=true
API_HOST=127.0.0.1
API_PORT=8000
API_KEY=your_secure_api_key_here
API_DEBUG=false
# 允许访问API的IP列表，用逗号分隔，留空表示允许所有
API_ALLOWED_IPS=

# 数据库配置
# SQLite数据库（默认）
DATABASE_URL=sqlite:///./unturned_bot.db
# 或使用MySQL数据库
# DATABASE_URL=mysql+pymysql://username:password@host:port/database
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# 服务器监控配置
MONITOR_ENABLED=true
MONITOR_INTERVAL=60
SERVER_QUERY_TIMEOUT=5
SERVER_NOTIFY_ON_STATUS_CHANGE=true

# Unturned服务器配置
# 注意：这里只是配置示例，实际使用时请根据您的服务器情况进行修改
# 由于环境变量中无法直接存储复杂的JSON结构，
# 实际配置时请直接编辑config.py文件中的UNTURNED_SERVERS变量

# 签到系统配置
SIGNIN_ENABLED=true
SIGNIN_REWARD_ECONOMY=100
SIGNIN_REWARD_EXP=50
SIGNIN_REWARD_MESSAGE=签到成功！获得{economy}经济点和{exp}经验值
SIGNIN_MAX_STREAK_REWARD_MULTIPLIER=3.0

# 命令配置
COMMAND_PREFIX=un.
COMMAND_COOLDOWN=3
COMMAND_MAX_RETRY=3

# 消息配置
MESSAGE_MAX_LENGTH=2000
MESSAGE_SEND_TIMEOUT=10
MESSAGE_FORMAT=[Unturned助手] {content}

# 缓存配置
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=unturned_bot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 功能开关配置
FEATURE_PLAYER_MANAGEMENT=true
FEATURE_ECONOMY_SYSTEM=true
FEATURE_SERVER_MONITORING=true
FEATURE_API_INTERFACE=true
FEATURE_SIGNIN_SYSTEM=true
FEATURE_BROADCAST=true

# OneBot配置
ONEBOT_API_URL=
ONEBOT_ACCESS_TOKEN=
ONEBOT_SECRET=

# 群管理配置
GROUP_DEFAULT_ADMIN_PERMISSION=1
GROUP_DEFAULT_MEMBER_PERMISSION=0

# 数据同步配置
DATA_SYNC_ENABLED=false
DATA_SYNC_INTERVAL=300
DATA_BACKUP_ENABLED=true
DATA_BACKUP_INTERVAL=86400
DATA_BACKUP_DIR=./backups

# 其他配置
ERROR_REPORT_CHANNEL=
AUTO_STARTUP_NOTIFY=true
LANGUAGE=zh-CN
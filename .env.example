# Unturned服务器助手机器人配置文件示例
# 复制此文件并重命名为.env后修改配置

# 基础配置
VERSION=1.0.0
DEBUG=False

# NoneBot基础配置
# 超级用户QQ号列表，多个用逗号分隔
# 示例：SUPERUSERS=["1000000000","1234567890"]
SUPERUSERS=["1000000000"]

# 机器人昵称列表
NICKNAME=["Unturned助手", "unturnedbot"]

# 命令前缀
COMMAND_START=["/"]

# 命令分隔符
COMMAND_SEP=[" "]

# API服务配置
API_ENABLED=True
API_HOST=127.0.0.1
API_PORT=8000

# API访问密钥（请设置为强密码）
API_KEY=your-api-key-here

# 数据库配置
# 格式：mysql+pymysql://用户名:密码@主机:端口/数据库名
# 生产环境请使用真实的数据库连接信息
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/unturned_bot

# 数据库连接池大小
DB_POOL_SIZE=20

# OneBot适配器配置
ONE_BOT_URL=http://127.0.0.1:5700

# OneBot访问令牌（可选，如果OneBot服务设置了令牌）
# ONE_BOT_ACCESS_TOKEN=your-access-token-here

# 服务器监控配置
MONITOR_ENABLED=True

# 监控检查间隔（秒）
MONITOR_INTERVAL=60

# Unturned服务器连接配置
SERVER_IP=127.0.0.1
SERVER_PORT=27015
SERVER_QUERY_PORT=27016

# 服务器连接超时时间（秒）
SERVER_TIMEOUT=5

# 通知配置
# 接收监控通知的QQ群号列表
MONITOR_GROUPS=["123456789"]

# 启动通知开关
NOTIFY_ON_STARTUP=True

# 关闭通知开关
NOTIFY_ON_SHUTDOWN=True

# 服务器状态变化通知开关
NOTIFY_STATUS_CHANGE=True

# 命令配置
ENABLE_HELP_COMMAND=True
ENABLE_BIND_COMMAND=True
ENABLE_SIGN_COMMAND=True
ENABLE_ME_COMMAND=True
ENABLE_SERVER_COMMAND=True
ENABLE_BROADCAST_COMMAND=True

# 签到奖励配置
# 基础签到奖励
SIGN_IN_REWARD_BASE=100

# 连续7天签到额外奖励
SIGN_IN_REWARD_7DAYS=1000

# 连续30天签到额外奖励
SIGN_IN_REWARD_30DAYS=5000

# 日志配置
LOG_LEVEL=INFO

# 是否记录日志到文件
LOG_TO_FILE=True

# 日志文件路径
LOG_FILE=unturned_bot.log

# 其他配置
# 最大重试次数
MAX_RETRY_TIMES=3

# 重试间隔（秒）
RETRY_INTERVAL=5

# 默认最大玩家数量
DEFAULT_MAX_PLAYERS=24

# 默认地图名称
DEFAULT_MAP_NAME=Unknown